{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "POST /api/topics": {
    "description": "add a new topic",
    "exampleRequest": {
      "slug": "football",
      "description": "Footie!"
    },
    "exampleResponse": {
      "topic": {
        "slug": "football",
        "description": "Footie!"
      }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of articles with a selection query parameters if desired",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleRequest": {
      "topic": "cats",
      "sort_by": "created_at",
      "order_by": "DESC",
      "limit": 3,
      "p": 2
    },
    "exampleResponse": {
      "articles": [
        {
          "article_id": 5,
          "title": "UNCOVERED: catspiracy to bring down democracy",
          "author": "rogersop",
          "topic": "cats",
          "created_at": "2023-08-03T13:14:00.000Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 2
        },
        {
          "article_id": 7,
          "title": "The Secret Life of Cats",
          "author": "kittylover",
          "topic": "cats",
          "created_at": "2022-10-12T08:30:00.000Z",
          "votes": 10,
          "article_img_url": "https://images.pexels.com/photos/123456/cat-secret-life.jpg?w=700&h=700",
          "comment_count": 5
        },
        {
          "article_id": 9,
          "title": "The Curious Case of Mr. Whiskers",
          "author": "meowmaster",
          "topic": "cats",
          "created_at": "2021-05-20T16:45:00.000Z",
          "votes": 5,
          "article_img_url": "https://images.pexels.com/photos/987654/mr-whiskers-curious-cat.jpg?w=700&h=700",
          "comment_count": 3
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "create a new article",
    "exampleRequest": {
      "title": "New Article",
      "author": "butter_bridge",
      "body": "This is the content of the article",
      "topic": "cats",
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
    },
    "exampleResponse": {
      "article": {
        "article_id": 123,
        "title": "New Article",
        "author": "butter_bridge",
        "body": "This is the content of the article",
        "topic": "cats",
        "created_at": "2023-06-26T14:00:00.000Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 0
      }
    }
  },
  "GET /api/articles/:article_id": {
    "description": "get an article by its ID",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 100,
        "title": "Any Title",
        "author": "Gandalf",
        "body": "Major spells",
        "topic": "Witchcraft and Wizardry",
        "comment_count": 10,
        "created_at": "2023-06-26T09:00:00.000Z",
        "votes": 1000,
        "article_img_url": "https://static0.gamerantimages.com/wordpress/wp-content/uploads/2021/10/Gandalf-Name-Feature-Image.jpg"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "get comments for an article with pagination queries if desired",
    "queries": ["limit", "p"],
    "exampleRequest": {
      "limit": 3,
      "p": 1
    },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 1000,
          "created_at": "2023-06-26T12:00:00.000Z",
          "author": "Voldemort",
          "body": "Using wands outdoors",
          "article_id": 1
        },
        {
          "comment_id": 2,
          "votes": 2000,
          "created_at": "2023-06-26T13:00:00.000Z",
          "author": "Harry Potter",
          "body": "Defeating the Dark Lord",
          "article_id": 1
        },
        {
          "comment_id": 3,
          "votes": 1500,
          "created_at": "2023-06-26T14:00:00.000Z",
          "author": "Hermione Granger",
          "body": "Cleverness and knowledge",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "add a comment for an article",
    "exampleRequest": {
      "username": "Harry Potter",
      "body": "Defeating the Dark Lord"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 123,
        "votes": 0,
        "created_at": "2023-06-26T14:00:00.000Z",
        "author": "Harry Potter",
        "body": "Defeating the Dark Lord",
        "article_id": 1
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "update an article by article_id",
    "queries": [],
    "exampleRequest": {
      "inc_votes": 10
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 110,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/articles/:article_id": {
    "description": "delete an article by article_id",
    "queries": [],
    "exampleResponse": {
      "msg": "Deleted"
    }
  },
  "GET /api/users": {
    "description": "get all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "Jonny",
          "avatar_url": "https://www.example.com/avatar.png"
        },
        {
          "username": "grumpy19",
          "name": "John",
          "avatar_url": "https://www.example.com/avatar.png"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "Get a user by their username",
    "queries": [],
    "exampleQuery": "/api/users/butter_bridge",
    "exampleResponse": {
      "user": {
        "username": "butter_bridge",
        "avatar_url": "https://www.example.com/avatar.png",
        "name": "Jonny"
      }
    }
  },

  "PATCH /api/comments/:comment_id": {
    "description": "Update the votes on a comment given the comment's comment_id",
    "queries": [],
    "exampleRequest": {
      "inc_votes": 10
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "votes": 26,
        "created_at": "2023-06-26T10:00:00.000Z",
        "author": "butter_bridge",
        "body": "This is a comment"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "delete a comment by comment_id",
    "queries": [],
    "exampleResponse": {
      "msg": "Deleted"
    }
  }
}
