{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "get an article by its ID",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 100,
        "title": "Any Title",
        "author": "Gandalf",
        "body": "Major spells",
        "topic": "Witchcraft and Wizardry",
        "created_at": "2023-06-26T09:00:00.000Z",
        "votes": 1000,
        "article_img_url": "https://static0.gamerantimages.com/wordpress/wp-content/uploads/2021/10/Gandalf-Name-Feature-Image.jpg"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "get all comments for an article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 1000,
          "created_at": "2023-06-26T12:00:00.000Z",
          "author": "Voldemort",
          "body": "Using wands outdoors",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "add a comment for an article",
    "exampleRequest": {
      "username": "Harry Potter",
      "body": "Defeating the Dark Lord"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 123,
        "votes": 0,
        "created_at": "2023-06-26T14:00:00.000Z",
        "author": "Harry Potter",
        "body": "Defeating the Dark Lord",
        "article_id": 1
      }
    }
  }
}
